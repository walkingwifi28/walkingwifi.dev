---
import CalendarIcon from "../assets/icons/calendar.svg";
import RefreshIcon from "../assets/icons/refresh.svg";
import Tag from "./Tag.astro";
import type { Blog } from "../library/blogs";

interface Props {
    blog: Blog;
}

const { blog } = Astro.props;

// 日付フォーマット（YYYY.MM.DD）
const formatDate = (dateString: string): string => {
    const date = new Date(dateString);
    const year = date.getFullYear();
    const month = String(date.getMonth() + 1).padStart(2, "0");
    const day = String(date.getDate()).padStart(2, "0");
    return `${year}.${month}.${day}`;
};

// HTMLタグを除去してプレーンテキストを取得
const stripHtml = (html: string): string => {
    return html.replace(/<[^>]*>/g, "");
};

// 概要テキスト（最大100文字）
const excerpt = blog.content
    ? stripHtml(blog.content).slice(0, 100) + "..."
    : "";
---

<a
    href={`/${blog.id}`}
    class="block bg-white rounded-2xl overflow-hidden shadow-md transition-all duration-200 hover:-translate-y-1 hover:shadow-xl no-underline text-inherit"
>
    {
        blog.eyecatch && (
            <div class="aspect-video overflow-hidden">
                <img
                    src={blog.eyecatch.url}
                    alt={blog.title}
                    class="w-full h-full object-cover"
                />
            </div>
        )
    }
    <div class="p-5">
        <div class="flex items-center gap-4 text-zinc-500 text-sm mb-3">
            <!-- 作成日 -->
            <div class="flex items-center gap-1.5">
                <img src={CalendarIcon.src} alt="calendar" />
                <span>{formatDate(blog.createdAt)}</span>
            </div>
            <!-- 更新日（作成日と異なる場合のみ表示） -->
            <div class="flex items-center gap-1.5">
                <img src={RefreshIcon.src} alt="refresh" />
                <span>{formatDate(blog.updatedAt)}</span>
            </div>
        </div>
        <h2 class="text-lg font-bold leading-relaxed m-0 mb-3 text-zinc-800">
            {blog.title}
        </h2>
        {
            excerpt && (
                <p class="text-sm text-zinc-500 leading-relaxed m-0 mb-4">
                    {excerpt}
                </p>
            )
        }
        {
            blog.tag && blog.tag.length > 0 && (
                <div class="flex flex-wrap gap-2">
                    {blog.tag.map((t) => (
                        <Tag name={t.name} />
                    ))}
                </div>
            )
        }
    </div>
</a>
