---
import Tag from "./Tag.astro";
import CalendarIcon from "./icons/CalendarIcon.astro";
import RefreshIcon from "./icons/RefreshIcon.astro";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";

interface Props {
    blog: CollectionEntry<"blogs">;
}

const { blog } = Astro.props;

// 全タグを取得
const allTags = await getCollection("tags");

// TinaCMS のパス形式 "src/content/tags/xxx.md" から ID を抽出し、タグを検索（大文字小文字を無視）
const findTag = (tagPath: string) => {
    const match = tagPath.match(/src\/content\/tags\/(.+)\.md$/);
    if (!match) return null;
    const tagId = match[1].toLowerCase();
    return allTags.find((t) => t.id.replace(/\.md$/, "").toLowerCase() === tagId) || null;
};

const tags = (blog.data.tags || [])
    .map((t) => findTag(t.tag))
    .filter((t) => t != null);

// フロントマターから日付を取得
const createdAt = blog.data.createdAt;
const updatedAt = blog.data.updatedAt;

// 日付フォーマット（YYYY.MM.DD）- UTC+9（JST）として表示
const formatDate = (date: Date | undefined): string => {
    if (!date) return "";
    // UTC時刻に9時間（JST）を加算
    const jstDate = new Date(date.getTime() + 9 * 60 * 60 * 1000);
    const year = jstDate.getUTCFullYear();
    const month = String(jstDate.getUTCMonth() + 1).padStart(2, "0");
    const day = String(jstDate.getUTCDate()).padStart(2, "0");
    return `${year}.${month}.${day}`;
};
---

<a
    href={`/blogs/${blog.id.replace(/\.md$/, "")}`}
    class="block bg-[var(--color-card-bg)] rounded-2xl overflow-hidden shadow-md transition-all duration-200 hover:-translate-y-1 hover:shadow-xl no-underline text-inherit"
>
    <div class="aspect-video bg-[var(--color-bg-secondary)] overflow-hidden">
        {
            blog.data.thumbnail ? (
                <img
                    src={blog.data.thumbnail}
                    alt={blog.data.title}
                    class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                />
            ) : (
                <div class="w-full h-full flex items-center justify-center text-[var(--color-text-secondary)]">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-12 w-12"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                        />
                    </svg>
                </div>
            )
        }
    </div>
    <div class="p-5">
        <div
            class="flex items-center gap-4 text-[var(--color-text-secondary)] text-sm mb-3"
        >
            <!-- 作成日 -->
            {
                createdAt && (
                    <div class="flex items-center gap-1.5">
                        <CalendarIcon />
                        <span>{formatDate(createdAt)}</span>
                    </div>
                )
            }
            <!-- 更新日 -->
            {
                updatedAt && (
                    <div class="flex items-center gap-1.5">
                        <RefreshIcon />
                        <span>{formatDate(updatedAt)}</span>
                    </div>
                )
            }
        </div>
        <h2
            class="text-lg font-bold leading-relaxed m-0 mb-2 text-[var(--color-text)]"
        >
            {blog.data.title}
        </h2>
        {/* タグ（ない場合も高さを確保） */}
        <div class="flex flex-wrap gap-1 mb-2 min-h-[1.75rem]">
            {tags.map((t) => t && <Tag name={t.data.name} />)}
        </div>

        <p
            class="text-sm text-[var(--color-text-secondary)] m-0 leading-relaxed line-clamp-3 min-h-[4.5em]"
        >
            {blog.data.description || ""}
        </p>
    </div>
</a>
