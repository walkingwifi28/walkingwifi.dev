---
import type { Blog } from "../library/microcms";

interface Props {
    blog: Blog;
}

const { blog } = Astro.props;

// 日付フォーマット（YYYY.MM.DD）
const formatDate = (dateString: string): string => {
    const date = new Date(dateString);
    const year = date.getFullYear();
    const month = String(date.getMonth() + 1).padStart(2, "0");
    const day = String(date.getDate()).padStart(2, "0");
    return `${year}.${month}.${day}`;
};

// HTMLタグを除去してプレーンテキストを取得
const stripHtml = (html: string): string => {
    return html.replace(/<[^>]*>/g, "");
};

// 概要テキスト（最大100文字）
const excerpt = blog.content
    ? stripHtml(blog.content).slice(0, 100) + "..."
    : "";
---

<a
    href={`/${blog.id}`}
    class="block bg-white rounded-2xl overflow-hidden shadow-md transition-all duration-200 hover:-translate-y-1 hover:shadow-xl no-underline text-inherit"
>
    {
        blog.eyecatch && (
            <div class="aspect-video overflow-hidden">
                <img
                    src={blog.eyecatch.url}
                    alt={blog.title}
                    class="w-full h-full object-cover"
                />
            </div>
        )
    }
    <div class="p-5">
        <div class="flex items-center gap-4 text-zinc-500 text-sm mb-3">
            <!-- 作成日 -->
            <div class="flex items-center gap-1.5">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="shrink-0"
                >
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"
                    ></rect>
                    <line x1="16" y1="2" x2="16" y2="6"></line>
                    <line x1="8" y1="2" x2="8" y2="6"></line>
                    <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                <span>{formatDate(blog.createdAt)}</span>
            </div>
            <!-- 更新日（作成日と異なる場合のみ表示） -->
            <div class="flex items-center gap-1.5">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="shrink-0"
                >
                    <path d="M21 2v6h-6"></path>
                    <path d="M3 12a9 9 0 0 1 15-6.7L21 8"></path>
                    <path d="M3 22v-6h6"></path>
                    <path d="M21 12a9 9 0 0 1-15 6.7L3 16"></path>
                </svg>
                <span>{formatDate(blog.updatedAt)}</span>
            </div>
        </div>
        <h2 class="text-lg font-bold leading-relaxed m-0 mb-3 text-zinc-800">
            {blog.title}
        </h2>
        {
            excerpt && (
                <p class="text-sm text-zinc-500 leading-relaxed m-0 mb-4">
                    {excerpt}
                </p>
            )
        }
        {
            blog.tag && blog.tag.length > 0 && (
                <div class="flex flex-wrap gap-2">
                    {blog.tag.map((t) => (
                        <span class="inline-block px-3 py-1 bg-zinc-200 rounded-full text-xs text-zinc-500">
                            #{t.name}
                        </span>
                    ))}
                </div>
            )
        }
    </div>
</a>
