---
import CalendarIcon from "../assets/icons/calendar.svg";
import RefreshIcon from "../assets/icons/refresh.svg";
import Tag from "./Tag.astro";
import type { CollectionEntry } from "astro:content";

interface Props {
    blog: CollectionEntry<"blogs">;
}

const { blog } = Astro.props;

// ファイルのタイムスタンプを取得
import fs from "node:fs";
import path from "node:path";

const getFileStats = (id: string) => {
    try {
        const filePath = path.join(process.cwd(), "src/content/blogs", id);
        const stats = fs.statSync(filePath);
        return {
            updatedAt: stats.mtime,
            createdAt: stats.birthtime,
        };
    } catch (e) {
        return {
            updatedAt: undefined,
            createdAt: undefined,
        };
    }
};

const { updatedAt, createdAt } = getFileStats(blog.id);

// 日付フォーマット（YYYY.MM.DD）
const formatDate = (date: Date | undefined): string => {
    if (!date) return "";
    const year = date.getFullYear();
    const month = String(date.getMonth() + 1).padStart(2, "0");
    const day = String(date.getDate()).padStart(2, "0");
    return `${year}.${month}.${day}`;
};
---

<a
    href={`/blogs/${blog.id.replace(/\.md$/, "")}`}
    class="block bg-white rounded-2xl overflow-hidden shadow-md transition-all duration-200 hover:-translate-y-1 hover:shadow-xl no-underline text-inherit"
>
    <div class="aspect-video bg-zinc-100 overflow-hidden">
        {
            blog.data.thumbnail ? (
                <img
                    src={blog.data.thumbnail}
                    alt={blog.data.title}
                    class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                />
            ) : (
                <div class="w-full h-full flex items-center justify-center text-zinc-300">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-12 w-12"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                        />
                    </svg>
                </div>
            )
        }
    </div>
    <div class="p-5">
        <div class="flex items-center gap-4 text-zinc-500 text-sm mb-3">
            <!-- 作成日 -->
            {
                createdAt && (
                    <div class="flex items-center gap-1.5">
                        <img src={CalendarIcon.src} alt="calendar" />
                        <span>{formatDate(createdAt)}</span>
                    </div>
                )
            }
            <!-- 更新日 -->
            {
                updatedAt && (
                    <div class="flex items-center gap-1.5">
                        <img src={RefreshIcon.src} alt="refresh" />
                        <span>{formatDate(updatedAt)}</span>
                    </div>
                )
            }
        </div>
        <h2 class="text-lg font-bold leading-relaxed m-0 mb-3 text-zinc-800">
            {blog.data.title}
        </h2>
    </div>
</a>
