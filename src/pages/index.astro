---
import Layout from "../layouts/Layout.astro";
import BlogCard from "../components/BlogCard.astro";
import { getCollection } from "astro:content";

// ブログ一覧を取得（作成日降順）
import fs from "node:fs";
import path from "node:path";

const getFileBirthtime = (id: string) => {
	try {
		const filePath = path.join(process.cwd(), "src/content/blogs", id);
		const stats = fs.statSync(filePath);
		return stats.birthtime.getTime();
	} catch (e) {
		return 0;
	}
};

const allBlogs = await getCollection("blogs");

// 本番環境では下書きを除外、開発環境では全て表示
const blogs = import.meta.env.PROD
	? allBlogs.filter((blog) => !blog.data.draft)
	: allBlogs;

blogs.sort((a, b) => {
	const dateA = getFileBirthtime(a.id);
	const dateB = getFileBirthtime(b.id);
	return dateB - dateA;
});
---

<Layout>
	<main class="max-w-6xl mx-auto px-4 py-8">
		<section>
			<h1 class="text-2xl font-bold mb-6">最新記事</h1>
			<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
				{blogs.map((blog) => <BlogCard blog={blog} />)}
			</div>
		</section>
	</main>
</Layout>
